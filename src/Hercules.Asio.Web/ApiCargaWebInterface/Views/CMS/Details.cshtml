@model ApiCargaWebInterface.ViewModels.PageViewModel

@{
    ViewData["Title"] = Model.RouteProxyLess;
    ViewData["BodyClass"] = "fichaRecurso";
}

<div class="row">
    <div class="col col-12 col-lg-12 col-contenido">
        <div class="wrapCol">
            <div class="header-resource">
                <div class="h1-container">
                    <h1>Administración > <a href="@Url.Action("Index","CMS")">Administración de páginas</a> > @Model.RouteProxyLess</h1>
                    <div class="botones">
                        <ul>
                            <li>
                                <a href="@Url.Action("Create", new {  page_id=Model.PageId, route=Model.RouteProxyLess  })" class="btn btn-editar">Editar</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Delete", new {  page_id=Model.PageId  })" class="btn btn-eliminar">Eliminar</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="contenido">
                <div class="grupo grupo-descripcion">
                    <div class="identifier">
                        <p class="titulo">Identificador</p>
                        <p>@Model.PageId</p>
                    </div>
                    <div class="outh-token">
                        <p class="titulo">Route</p>
                        <p><a href="@Model.Route">@Model.RouteProxyLess</a></p>
                    </div>
                    <div class="outh-token">
                        <p class="titulo">Html de la vista</p>
                        <a href="@Url.Action("DownloadHtml", new {  route=Model.RouteProxyLess  })" class="btn-mas-recursos"><em class="material-icons">attachment</em>Descargar</a>
                    </div>
                </div>
            </div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
